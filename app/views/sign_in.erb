<div class="container">
  <div class="middle">
    <h2>Sign Up</h2>

    <form id="sign-in" method="post" action="/login">
      <label class="label" for="username">Username</label>
      <input type="text" name="username" placeholder="e.g., joe" >
      <br>


      <label class="label" for="password">Password</label>
      <input type="password" name="password" placeholder="6 or more characters">
      <br>

      <div class="submit"><input type="submit" value="Sign In"></div>
    </form>
  </div>
</div>

